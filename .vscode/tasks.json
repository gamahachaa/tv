{
    "version": "2.0.0",
    "liveSassCompile.settings.forceBaseDirectory": "/quark/scss/",
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/quark/css-compiled/"
        }
    ],
    "tasks": [
        {
            "label": "Sass Compile",
            "type": "shell",
            "command": "sass ${workspaceRoot}/quark/scss/theme.scss ${workspaceRoot}/quark/css-compiled/theme.css",
            "group": "build"
          }
    ]
}